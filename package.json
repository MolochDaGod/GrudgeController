{
  "name": "racalvin-combat-system",
  "version": "2.0.0",
  "description": "Modular Three.js combat system with target locking, tank controls, and dynamic weapons - Ready for Puter Apps",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server . -p 8080 -o",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "clean-install": "rm -rf node_modules package-lock.json && npm install",
    "stats": "vite-bundle-visualizer"
  },
  "keywords": [
    "threejs",
    "combat-system",
    "game-engine",
    "animation",
    "3d",
    "target-lock",
    "tank-controls",
    "modular",
    "puter",
    "webgame"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/racalvin-combat-system"
  },
  "author": "Racalvin Combat Team",
  "license": "MIT",
  "dependencies": {
    "cannon-es": "^0.20.0",
    "howler": "^2.2.4",
    "stats.js": "^0.17.0",
    "three": "^0.160.0",
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "http-server": "^14.1.1",
    "prettier": "^3.8.0",
    "terser": "^5.46.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.17"
  },
  "files": [
    "src/",
    "public/",
    "docs/",
    "index.html",
    "README.md"
  ]
}
